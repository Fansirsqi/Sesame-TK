<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="subtitleTextColor">#333333</item>
        <item name="android:navigationBarColor">@color/button</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <!-- 设置actionOverflowMenuStyle以自定义菜单的背景 -->
        <item name="actionOverflowMenuStyle">@style/MenuTheme</item>
    </style>

    <style name="MenuTheme">
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>

</resources>